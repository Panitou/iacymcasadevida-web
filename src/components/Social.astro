---
import Facebook from "../assets/facebook.svg";
import Youtube from "../assets/youtube.svg";
import Instagram from "../assets/instagram.png";
---

<section
  class="bg-[#000000] flex flex-col w-full h-full items-center justify-center gap-y-5 p-10"
>
  <h1 class="md:text-4xl text-xl font-bold text-white">Redes Sociales</h1>
  <div
    class="sm:w-[400px] w-[200px] md:h-24 h-14 rounded-xl flex justify-center items-center gap-x-12"
  >
    <a href="">
      <img
        src={Facebook.src}
        width={60}
        alt=""
        class="hover:animate-hover-jump"
      />
    </a>
    <a href="">
      <img
        src={Youtube.src}
        width={60}
        alt=""
        class="hover:animate-hover-jump"
      />
    </a>
    <a href="">
      <img
        src={Instagram.src}
        width={60}
        alt=""
        class="hover:animate-hover-jump"
      />
    </a>
  </div>
</section>
